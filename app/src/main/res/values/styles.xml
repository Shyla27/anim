<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="nav_drawer_menu_item">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:height">48dp</item>
        <item name="android:fontFamily">@font/helvetica_neue_medium</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">10dp</item>
    </style>

    <style name="nav_header_account_info">
        <item name="android:fontFamily">@font/helvetica_neue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_toEndOf" tools:targetApi="jelly_bean_mr1">@id/img_profile_photo</item>

    </style>


</resources>
